<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">
            Please add (or edit) the link!
        </h3>
    </div>
    <form method="post" action="/edit" enctype="multipart/formdata">
        <div class="panel-body form-horizontal">
            <div class="form-group col-md-12">
                <label class="col-md-2 control-label"
                       for="name">Short Name:</label>
                <div class="col-md-10">
                    <input class="form-control" type="text"
                           name="name">
                </div>
            </div>
            <div class="form-group col-md-12">
                <label class="col-md-2 control-label"
                       for="url_id">URL:</label>
                <div class="col-md-10">
                    <input class="form-control" type="text"
                           name="url_id">
                </div>
            </div>
            <div class="form-group col-md-12">
                <label class="col-md-2 control-label"
                       for="description">Description:</label>
                <div class="col-md-10">
                    <textarea class="form-control"
                              name="description" rows="2"></textarea>
                </div>
            </div>
            <div class="form-group col-md-12">
                <div class="col-md-12 text-right">
                    <button type="submit" id="login-btn"
                            class="btn btn-success" type="button">
                        <i class="fa fa-floppy-o ">
                        </i> Save URL</button>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Your URLs
        </h3>
    </div>
    <div class="panel-body">
        {{#each urls}}
        <div class="col-md-4 text-center" style="padding-bottom:1em;"><a href="/edit/{{ uniqueId }}">{{ name }}</a>: {{ url_id }}
        </div>
        {{/each}}
    </div>
</div>
